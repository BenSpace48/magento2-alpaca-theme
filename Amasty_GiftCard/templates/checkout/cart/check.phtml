<?php /** @var $block \Amasty\GiftCard\Block\Checkout\Cart\CheckCard */?>

<?php
$card = $block->getCard();
$currentBalance = $block->getCurrentBalance($card->getCurrentValue());
if ($card->getExpiredDate()) {
    $_validTill = /* @noEscape */ $block->getExpiredDate($card->getExpiredDate());
} else {
    $_validTill = /* @noEscape */ $block->escapeHtml(__('Unlimited'));
}
?>
<?php if ($card && $card->getId()): ?>
    <div class="amgiftcard-info">
        <div class="information">
            <p class="information__text">
                <?= $block->escapeHtml(__("Status: %1", $card->getStatus())) ?>
            </p>
            <p class="information__text">
                <?= $block->escapeHtml(__('Current Balance: %1', $currentBalance)) ?>
            </p>
            <p class="information__text">
                <?= $block->escapeHtml(__('Valid till: %1', $_validTill)) ?>
            </p>
        </div>
    </div>
<?php else: ?>
    <div class="message message--error">
        <?= $block->escapeHtml(__('Wrong Gift Card Code.')) ?>
    </div>
<?php endif; ?>
