<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="product.info.options.wrapper">
            <referenceBlock
                name="product.info.options.swatches"
                template="Magento_Swatches::product/layered/productSwatch.phtml"
            />
        </referenceBlock>

        <referenceBlock
            name="product.info.addtocart.additional"
            remove="true"
        />
        <referenceBlock name="catalog.product.related">
            <block
                class="Magento\Framework\View\Element\RendererList"
                name="related.product.type.details.renderers"
                as="details.renderers"
            >
                <block class="Magento\Framework\View\Element\Template" as="default"/>
                <block class="Magento\Swatches\Block\Product\Renderer\Listing\Configurable" name="related.product.type.details.renderers.configurable" as="configurable" template="Magento_Swatches::product/listing/renderer.phtml">
                    <arguments>
                        <argument name="configurable_view_model" xsi:type="object">Magento\Swatches\ViewModel\Product\Renderer\Configurable</argument>
                    </arguments>
                </block>
            </block>
        </referenceBlock>
        <referenceBlock name="product.info.upsell">
            <block
                class="Magento\Framework\View\Element\RendererList"
                name="upsells.product.type.details.renderers"
                as="details.renderers"
            >
                <block
                    class="Magento\Framework\View\Element\Template"
                    as="default"
                />
                <block
                    class="Magento\Swatches\Block\Product\Renderer\Listing\Configurable"
                    name="upsells.product.type.details.renderers.configurable"
                    as="configurable"
                    template="Magento_Swatches::product/listing/renderer.phtml"
                >
                    <arguments>
                        <argument
                            name="configurable_view_model"
                            xsi:type="object"
                        >
                            Magento\Swatches\ViewModel\Product\Renderer\Configurable
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
